@model PostawNaMilionAzure.ViewModel.AddCategoryViewModel

@using (Html.BeginForm("AddCategory", "AdminManage"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        @Html.ValidationSummary()


    </div>
        <div class="form-group">
            @Html.LabelFor(x => x.CategoryDict.Name)
            @Html.TextBoxFor(x => x.CategoryDict.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.CategoryDict.Description)
            @Html.TextBoxFor(x => x.CategoryDict.Description, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.CategoryDict.KnowledgeAreaId)
            @Html.DropDownListFor(x => x.CategoryDict.KnowledgeAreaId,
                         new SelectList(Model.KnowledgeAreaList, "Id", "Name",
                                         Model.KnowledgeAreaList.First().Id),
                         new { @class = "dropdown form-control" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default btn-add-category" value="Dodaj" />
        </div>

}


