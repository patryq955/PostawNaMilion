@model PostawNaMilionAzure.Models.StepAddSubTotalValue
@{
    ViewBag.Title = "SetStepTotalValue";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">


    <div class="done-add">
        Aktualna wartość: @ViewBag.CurrentTotalValue
    </div>
    @using (Html.BeginForm("SetStepTotalValue", "AdminManage"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="form-group">
                @Html.LabelFor(x=>x.StepValue)
                @Html.TextBoxFor(x=>x.StepValue, new { @class = "form-control" })
        </div>

        <div class="row">
            <input type="submit" class="btn btn-default" value="Dodaj" />
        </div>
    }


</div>
