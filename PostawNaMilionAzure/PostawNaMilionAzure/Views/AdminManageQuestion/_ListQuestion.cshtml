@model IEnumerable<PostawNaMilionAzure.Models.Question>

@if (Model.Count() == 0)
{
    @: Brak pytan w kategorii
    }
else
{
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>
                    Pytanie
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var question in Model)
                {
                <tr>
                    <td>
                        @question.Contents
                    </td>
                    <td>
                        <a href="@Url.Action("EditQuestion","AdminManageQuestion", new { id = question.Id })"
                           class="btn btn-default">Edytuj</a>
                        <a id="hidden-show-question" data-id="@question.Id" data-id-category="@question.CategoryDictId" href="#" class="btn btn-default">
                            @if (question.IsHidden)
                            {
                                @:Przywróć
                            }
                            else
                            {
                                @:Ukryj
                            }
                        </a>
                    </td>
                </tr>

            }
        </tbody>

    </table>

}


